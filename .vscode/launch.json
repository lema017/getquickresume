{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Attach to Serverless Offline",
      "type": "node",
      "request": "attach",
      "port": 9229,
      "restart": true,
      "localRoot": "${workspaceFolder}/api",
      "remoteRoot": "${workspaceFolder}/api",
      "protocol": "inspector",
      "skipFiles": [
        "<node_internals>/**",
        "**/node_modules/**"
      ],
      "sourceMaps": true,
      "outFiles": [
        "${workspaceFolder}/api/dist/**/*.js"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "stopOnEntry": false,
      "env": {
        "NODE_ENV": "development"
      }
    },
    {
      "name": "Debug Google Auth Handler",
      "type": "node",
      "request": "attach",
      "port": 9229,
      "restart": true,
      "localRoot": "${workspaceFolder}/api",
      "remoteRoot": "${workspaceFolder}/api",
      "protocol": "inspector",
      "skipFiles": [
        "<node_internals>/**",
        "**/node_modules/**"
      ],
      "sourceMaps": true,
      "outFiles": [
        "${workspaceFolder}/api/dist/**/*.js"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "stopOnEntry": false,
      "env": {
        "NODE_ENV": "development"
      },
      "preLaunchTask": "Start Serverless Offline Debug"
    }
  ]
}
