{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start Serverless Offline Debug",
      "type": "shell",
      "command": "npm",
      "args": ["run", "offline:debug"],
      "options": {
        "cwd": "${workspaceFolder}/api"
      },
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "new",
        "showReuseMessage": true,
        "clear": false
      },
      "isBackground": true,
      "problemMatcher": {
        "owner": "serverless",
        "pattern": {
          "regexp": "^(.*)$",
          "file": 1
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "Starting Offline at stage",
          "endsPattern": "Server ready:"
        }
      }
    },
    {
      "label": "Build TypeScript",
      "type": "shell",
      "command": "npm",
      "args": ["run", "build"],
      "options": {
        "cwd": "${workspaceFolder}/api"
      },
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared"
      }
    }
  ]
}
